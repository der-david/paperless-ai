<% const activePage = typeof active !== 'undefined' ? active : ''; %>
<button id="mobileMenuButton" class="mobile-menu-button">
    <i class="fas fa-bars"></i>
</button>
<div id="sidebarOverlay" class="sidebar-overlay"></div>
<aside class="sidebar">
    <div class="sidebar-header">
        <img src="/favicon.ico" class="no-invert sidebar-logo" alt="Paperless AI Logo">
        <h1 class="brand-title">Paperless-AI<small><%= version %></small></h1>
    </div>

    <nav class="sidebar-nav">
        <ul>
            <li>
                <a href="/dashboard" class="sidebar-link <%= activePage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/manual" class="sidebar-link <%= activePage === 'manual' ? 'active' : '' %>">
                    <i class="fas fa-file-alt"></i>
                    <span>Manual</span>
                </a>
            </li>
            <li>
                <a href="/chat" class="sidebar-link <%= activePage === 'chat' ? 'active' : '' %>">
                    <i class="fa-solid fa-comment"></i>
                    <span>Chat</span>
                </a>
            </li>
            <li>
                <a href="/rag" class="sidebar-link <%= activePage === 'rag' ? 'active' : '' %>">
                    <i class="fa-solid fa-comment"></i>
                    <span>RAG Chat</span>
                </a>
            </li>
            <li>
                <a href="/playground" class="sidebar-link <%= activePage === 'playground' ? 'active' : '' %>">
                    <i class="fa-solid fa-flask-vial"></i>
                    <span>Playground</span>
                </a>
            </li>
            <li>
                <a href="/history" class="sidebar-link <%= activePage === 'history' ? 'active' : '' %>">
                    <i class="fa-solid fa-clock-rotate-left"></i>
                    <span>History</span>
                </a>
            </li>
            <li>
                <a href="/settings" class="sidebar-link <%= activePage === 'settings' ? 'active' : '' %>">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="sidebar-link">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
        <a href="https://github.com/clusterzx/paperless-ai"
            class="github-button sidebar-github-button">
            <span class="star-button">
                <svg class="star-icon" height="16" width="16" viewBox="0 0 16 16">
                    <path d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z"></path>
                </svg>
                Star
            </span>
            <span id="starCount" class="star-count">1.2k</span>
        </a>
        <p class="sidebar-github-support">
            Please support us on GitHub
        </p>
    </nav>
</aside>
